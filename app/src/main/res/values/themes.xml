<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BabyaAndroid" parent="Theme.Material3.DayNight.NoActionBar">
         <item name="colorPrimary">@color/primaryLight</item>
    </style>

    <style name="Theme.BabyaAndroid" parent="Base.Theme.BabyaAndroid" />
    <style name="Theme.BabyaAndroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.BabyaAndroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.BabyaAndroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RoundCornerBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">

        <item name="bottomSheetStyle">@style/RoundCornerModalStyle</item>

    </style>



    <style name="RoundCornerModalStyle" parent="Widget.Design.BottomSheet.Modal">

        <item name="android:background">@drawable/sp_bottom_sheet</item>

    </style>
</resources>