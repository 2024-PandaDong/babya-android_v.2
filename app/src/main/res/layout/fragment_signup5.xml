<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundNormalNormal"
    tools:context=".start.signup.Signup5">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/signUpToolbar"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:subtitle="title"
        android:title="test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/signUpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            android:text="회원가입"
            android:textSize="19sp" />

        <ImageButton
            android:id="@+id/signUpBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@null"
            android:rotation="180"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_14" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/userNowText"
        android:layout_width="130dp"
        android:layout_height="25dp"
        android:layout_marginTop="39dp"
        android:layout_marginStart="27dp"
        app:layout_constraintTop_toBottomOf="@+id/signUpToolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:text="당신의 현재..."
        android:textSize="20dp"
        android:fontFamily="@font/notosanskr_semibold"
        android:includeFontPadding="false"
        />
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup1Button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/userNowText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/sp_signup_false_round"
        android:paddingLeft="14dp"
        android:drawableStart="@drawable/ic_signup1"
        android:textColor="@color/black"
        android:text="임신을 계획하고 있어요!"
        android:textAlignment="textStart"
        android:textSize="16dp"
        android:fontFamily="@font/notosanskr_semibold"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup2Button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/signup1Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/sp_signup_false_round"
        android:textColor="@color/black"
        android:paddingLeft="14dp"
        android:drawableStart="@drawable/ic_signup2"
        android:text="임신중이에요!"
        android:textAlignment="textStart"
        android:textSize="16dp"
        android:fontFamily="@font/notosanskr_semibold"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup3Button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/signup2Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/sp_signup_false_round"
        android:textColor="@color/black"
        android:paddingLeft="14dp"
        android:drawableStart="@drawable/ic_signup3"
        android:text="귀여운 아이가 있어요!"
        android:textAlignment="textStart"
        android:textSize="16dp"
        android:fontFamily="@font/notosanskr_semibold"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup4Button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/signup3Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/sp_signup_false_round"
        android:textColor="@color/black"
        android:paddingLeft="14dp"
        android:drawableStart="@drawable/ic_signup4"
        android:text="귀여운 아이와 태아가 모두 있어요"
        android:textAlignment="textStart"
        android:textSize="16dp"
        android:fontFamily="@font/notosanskr_semibold"
        />


</androidx.constraintlayout.widget.ConstraintLayout>