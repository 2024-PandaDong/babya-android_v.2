            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/diaryMoveBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/ic_move"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileView" />

            <TextView
                android:id="@+id/diary"
                android:layout_width="90dp"
                android:layout_height="19dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/pretendard_variable"
                android:text="산모일기"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileView" />

            <LinearLayout
                android:id="@+id/diaryLayout"
                android:layout_width="0dp"
                android:layout_height="209dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="22dp"
                android:backgroundTint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/diary">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/diaryRv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="27dp"
                    android:backgroundTint="@color/gray"
                    android:fontFamily="@font/pretendard_variable"
                    android:gravity="start"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bookmarkText" />

            </LinearLayout>

            <TextView
                android:id="@+id/board"
                android:layout_width="90dp"
                android:layout_height="19dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/pretendard_variable"
                android:text="계시판"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/diaryLayout" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/boardMoveBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/ic_move"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/diaryLayout" />

            <LinearLayout
                android:id="@+id/boardLayout"
                android:layout_width="0dp"
                android:layout_height="209dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="22dp"
                android:backgroundTint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/board">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/boardRv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="27dp"
                    android:backgroundTint="@color/gray"
                    android:fontFamily="@font/pretendard_variable"
                    android:gravity="start"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
