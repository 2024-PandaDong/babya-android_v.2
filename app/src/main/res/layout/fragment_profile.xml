<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.profile.ProfileFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/yellow"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/settingBtn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_edit"
        android:background="@color/yellow"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="170dp"
        android:layout_height="26dp"
        android:text="박규민님 반가워요!"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard_variable"
        android:textAlignment="textStart"
        android:textSize="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/parentsText"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="소망이 아빠"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard_variable"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/dayText"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="D-Day: 86일"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard_variable"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintStart_toEndOf="@id/parentsText"
        />
    
    <TextView
        android:id="@+id/argText"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="나이: 17살"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard_variable"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/parentsText"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/weddingYearText"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="결혼: 1년차"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard_variable"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/parentsText"
        app:layout_constraintStart_toEndOf="@id/argText"
        />
    
    <TextView
        android:id="@+id/diaryText"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="산모일기: 소망이 산모 일기"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard_variable"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/argText"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/white"
        android:layout_marginTop="70dp"
        android:layout_marginRight="44dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>