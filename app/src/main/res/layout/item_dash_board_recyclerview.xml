<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="119dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="220dp"
            android:layout_height="25dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="임산부 취미 공유합니다!"
            android:textStyle="bold"
            android:fontFamily="@font/notosanskr"
            android:includeFontPadding="false"
            android:textSize="20dp"
            android:layout_marginLeft="13dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="동동이맘"
            android:textStyle="bold"
            android:fontFamily="@font/notosanskr"
            android:includeFontPadding="false"
            android:textSize="15dp"
            android:textAlignment="textEnd"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />



        <TextView
            android:id="@+id/body"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:text="오늘부터 4주차 동동이 엄마 입니다.\n임신한 후에 모임 가지면서 요가 같이 해봐요~"
            android:textStyle="bold"
            android:fontFamily="@font/notosanskr"
            android:includeFontPadding="false"
            android:textSize="13dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#757575"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            />


        <TextView
            android:id="@+id/ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30분전"
            android:textColor="@color/gray"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/viewsLayout"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:background="@drawable/sp_white_rounded_corner"
            android:layout_marginLeft="13dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >
            <ImageView
                android:layout_width="16dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_eye"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="6dp"
                />
            
            <TextView
                android:id="@+id/views"
                android:layout_width="30dp"
                android:layout_height="14dp"
                android:text="1400"
                android:textSize="12dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="7dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="3dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:background="@drawable/sp_white_rounded_corner"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/viewsLayout"
            >
            <ImageView
                android:layout_width="16dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_comment"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="6dp"
                />

            <TextView
                android:id="@+id/comment"
                android:layout_width="30dp"
                android:layout_height="14dp"
                android:text="2"
                android:textSize="12dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="7dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="3dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>