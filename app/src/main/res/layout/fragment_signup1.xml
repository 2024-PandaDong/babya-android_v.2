<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".start.signup.Signup1"
    android:background="@color/backgroundNormalNormal"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/signUpToolbar"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:subtitle="title"
        android:title="test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/signUpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            android:text="회원가입"
            android:textSize="19sp" />

        <ImageButton
            android:id="@+id/signUpBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@null"
            android:rotation="180"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_14" />

    </androidx.appcompat.widget.Toolbar>



    <TextView
        android:id="@+id/title"
        android:layout_width="218dp"
        android:layout_height="29dp"
        app:layout_constraintTop_toBottomOf="@id/signUpToolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="40dp"
        android:text="약관동의에 동의해 주세요."
        android:fontFamily="@font/notosanskr_semibold"
        android:includeFontPadding="false"
        android:textSize="20dp"
        android:textColor="@color/black"
        />
    
    
    <TextView
        android:id="@+id/middleTitle"
        android:layout_width="277dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="7dp"
        android:layout_marginStart="24dp"
        android:text="약관에 동의하셔면 당신에게 더욱 좋은 서비스를   제공해 드릴 수 있어요!"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        />

    <CheckBox
        android:id="@+id/fullAgreementCheckBox"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:text="전체동의"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/middleTitle" />

    <View
        android:id="@+id/essentialLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/fullAgreementCheckBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="54dp"
        android:background="@color/gray"
        />

    <CheckBox
        android:id="@+id/agreementCheckBox1"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:text="개인정보 수집 이용 동의(필수)"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/essentialLine" />

    <ImageButton
        android:id="@+id/agreementBtn1"
        android:layout_width="16dp"
        android:layout_height="12dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/ic_arrow_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/essentialLine" />


    <CheckBox
        android:id="@+id/agreementCheckBox2"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:text="서비스 이용약관(필수)"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/agreementCheckBox1" />

    <ImageButton
        android:id="@+id/agreementBtn2"
        android:layout_width="16dp"
        android:layout_height="12dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/ic_arrow_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/agreementCheckBox1" />

    <CheckBox
        android:id="@+id/agreementCheckBox3"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:text="서비스 이용약관(필수)"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/agreementCheckBox2" />

    <ImageButton
        android:id="@+id/agreementBtn3"
        android:layout_width="16dp"
        android:layout_height="12dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/ic_arrow_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/agreementCheckBox2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextBtn"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/sel_email_btn_selector"
        android:enabled="false"
        android:text="다음으로"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>