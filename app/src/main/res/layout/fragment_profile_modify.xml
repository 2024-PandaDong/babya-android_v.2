<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.profile.ProfileModifyFragment"
    android:background="@color/backgroundNormalStrong">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/profileSettingToolbar"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:subtitle="title"
        android:title="test"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/backgroundNormalNormal">

        <TextView
            android:id="@+id/todoListTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/notosanskr_medium"
            android:text="프로필"
            android:textSize="16sp"
            android:includeFontPadding="false"/>


        <ImageButton
            android:id="@+id/profileBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:src="@drawable/ic_arrow_14"
            android:background="@null"
            android:rotation="180"
            android:padding="12dp"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/profileSettingToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profileView1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/backgroundNormalNormal"
                android:paddingHorizontal="40dp"
                android:paddingTop="60dp"
                android:paddingBottom="32dp"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage"
                    android:layout_width="110dp"
                    android:layout_height="110dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/nameTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"

                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:text="이름"
                    android:textAlignment="textStart"
                    android:textColor="@color/neutral40"
                    android:textSize="16sp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profileImage" />

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:fontFamily="@font/notosanskr_regular"
                    android:includeFontPadding="false"
                    android:text=""
                    android:textAlignment="textEnd"
                    android:textColor="@color/labelAlternative"
                    android:textSize="16sp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/nameTitleText" />

                <TextView
                    android:id="@+id/ageTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"

                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:text="나이"
                    android:textAlignment="textStart"
                    android:textColor="@color/neutral40"
                    android:textSize="16sp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nameTitleText" />

                <TextView
                    android:id="@+id/ageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:fontFamily="@font/notosanskr_regular"
                    android:includeFontPadding="false"
                    android:text=""
                    android:textAlignment="textEnd"
                    android:textColor="@color/labelAlternative"
                    android:textSize="16sp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/ageTitleText" />

                <TextView
                    android:id="@+id/birthDateTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"

                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:text="생년월일"
                    android:textAlignment="textStart"
                    android:textColor="@color/neutral40"
                    android:textSize="16sp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ageTitleText" />

                <TextView
                    android:id="@+id/birthDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:fontFamily="@font/notosanskr_regular"
                    android:includeFontPadding="false"
                    android:text=""
                    android:textAlignment="textEnd"
                    android:textColor="@color/labelAlternative"
                    android:textSize="16sp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/birthDateTitleText" />

                <TextView
                    android:id="@+id/emailTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"

                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:text="이메일"
                    android:textAlignment="textStart"
                    android:textColor="@color/neutral40"
                    android:textSize="16sp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/birthDateTitleText" />

                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:fontFamily="@font/notosanskr_regular"
                    android:includeFontPadding="false"
                    android:text=""
                    android:textAlignment="textEnd"
                    android:textColor="@color/labelAlternative"
                    android:textSize="16sp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/emailTitleText" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/profileView1"
                android:background="@color/backgroundNormalNormal"
                android:paddingTop="20dp"
                android:paddingBottom="32dp"
                android:paddingHorizontal="40dp"
                android:layout_marginTop="11dp"
                >

                <TextView
                    android:id="@+id/marriageTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    app:layout_constraintStart_toStartOf="@id/marriageDayTitleText"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="결혼정보"
                    android:textSize="16sp"
                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    />


                <TextView
                    android:id="@+id/marriageDayTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"

                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:text="결혼주년"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textColor="@color/neutral40"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/marriageTitle" />

                <TextView
                    android:id="@+id/marriageDayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:fontFamily="@font/notosanskr_regular"
                    android:includeFontPadding="false"
                    android:text=""
                    android:textAlignment="textEnd"
                    android:textSize="16sp"
                    android:textColor="@color/labelAlternative"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/marriageDayTitleText" />

                <TextView
                    android:id="@+id/pregnancyDayTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"

                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:text="임신일"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textColor="@color/neutral40"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/marriageDayTitleText" />

                <TextView
                    android:id="@+id/pregnancyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:fontFamily="@font/notosanskr_regular"
                    android:includeFontPadding="false"
                    android:text=""
                    android:textAlignment="textEnd"
                    android:textSize="16sp"
                    android:textColor="@color/labelAlternative"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/pregnancyDayTitleText" />

                <TextView
                    android:id="@+id/birthNameTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"

                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:text="태명"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textColor="@color/neutral40"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pregnancyDayTitleText" />

                <TextView
                    android:id="@+id/birthNameDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:fontFamily="@font/notosanskr_regular"
                    android:includeFontPadding="false"
                    android:text=""
                    android:textAlignment="textEnd"
                    android:textSize="16sp"
                    android:textColor="@color/labelAlternative"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/birthNameTitleText" />

                <TextView
                    android:id="@+id/marriageTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"

                    android:fontFamily="@font/notosanskr_medium"
                    android:includeFontPadding="false"
                    android:text="아이"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textColor="@color/neutral40"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/birthNameTitleText" />

                <TextView
                    android:id="@+id/marriageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:fontFamily="@font/notosanskr_regular"
                    android:includeFontPadding="false"
                    android:text=""
                    android:textAlignment="textEnd"
                    android:textSize="16sp"
                    android:textColor="@color/labelAlternative"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/marriageTitleText" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>