<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:outlineProvider="none"
    card_view:cardCornerRadius="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="13dp"
        android:layout_gravity="center"
        android:background="@drawable/sp_item_background">
        <androidx.cardview.widget.CardView
            android:id="@+id/in_card_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            card_view:cardCornerRadius="100dp"
            android:outlineProvider="none"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"

                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_medium"
            android:text="현재 박규민님의 상태입니다."
            android:textSize="15sp"
            card_view:layout_constraintBottom_toTopOf="@+id/in_card_view"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/in_card_view"
            card_view:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/d_day_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D-Day"
            card_view:layout_constraintTop_toTopOf="@id/age_text"
            card_view:layout_constraintStart_toEndOf="@id/in_card_view"
            card_view:layout_constraintEnd_toStartOf="@id/age_text"
            android:textSize="15sp"
            android:fontFamily="@font/notosanskr_semibold"
            />
        <TextView
            android:id="@+id/d_day_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toTopOf="@id/age_count"
            card_view:layout_constraintStart_toStartOf="@id/d_day_text"
            card_view:layout_constraintEnd_toEndOf="@id/d_day_text"
            card_view:layout_constraintBottom_toBottomOf="@id/age_count"
            android:text="1212"
            android:fontFamily="@font/notosanskr_regular"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/age_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toBottomOf="@id/age_text"
            card_view:layout_constraintStart_toStartOf="@id/age_text"
            card_view:layout_constraintEnd_toEndOf="@id/age_text"
            card_view:layout_constraintBottom_toBottomOf="@id/in_card_view"
            android:text="1212"
            android:fontFamily="@font/notosanskr_regular"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/age_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나이"
            card_view:layout_constraintTop_toTopOf="@id/in_card_view"
            card_view:layout_constraintStart_toEndOf="@id/d_day_text"
            card_view:layout_constraintEnd_toStartOf="@id/marry_text"
            android:layout_marginTop="9dp"
            android:textSize="15sp"
            android:fontFamily="@font/notosanskr_semibold"
            />
        <TextView
            android:id="@+id/marry_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toTopOf="@id/age_count"
            card_view:layout_constraintStart_toStartOf="@id/marry_text"
            card_view:layout_constraintEnd_toEndOf="@id/marry_text"
            card_view:layout_constraintBottom_toBottomOf="@id/age_count"
            android:text="1212"
            android:fontFamily="@font/notosanskr_regular"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/marry_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결혼년차"
            card_view:layout_constraintTop_toTopOf="@id/age_text"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/age_text"
            android:textSize="15sp"
            android:fontFamily="@font/notosanskr_semibold"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>