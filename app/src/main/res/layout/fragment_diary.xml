<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.diary.DiaryFragment"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    >
<!--    android:layout_marginBottom="?attr/actionBarSize"-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/diaryTopPanel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/diaryToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                android:subtitle="title"
                android:title="test"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="test"
                    android:textSize="19sp"
                    android:fontFamily="@font/pretendard_bold"/>
                <ImageButton
                    android:id="@+id/diaryBackButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:src="@drawable/ic_arrow_14"
                    android:background="@null"
                    />
                <ImageButton
                    android:id="@+id/diaryReloadButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_reload"
                    android:background="@null"
                    android:layout_marginEnd="15dp"
                    />

            </androidx.appcompat.widget.Toolbar>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/diaryDisclosureButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/radioGroup"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/radioGroup"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/diaryDisclosureText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/diaryDisclosureIcon"
                    app:layout_constraintEnd_toStartOf="@id/diaryDisclosureIcon"
                    app:layout_constraintBottom_toBottomOf="@id/diaryDisclosureIcon"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="비공개"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_semibold"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintVertical_chainStyle="packed"
                    android:layout_marginEnd="6dp"
                    />

                <ImageView
                    android:id="@+id/diaryDisclosureIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lock"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/diaryDisclosureText"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:checkedButton="@id/diaryAllRadio"
                android:foregroundGravity="center"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/diaryBannerViewPager">

                <RadioButton
                    android:id="@+id/diaryAllRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:button="@null"
                    android:checked="true"
                    android:fontFamily="@font/pretendard_regular"
                    android:gravity="center"
                    android:text="전체"
                    android:background="@drawable/sel_main_underbar"
                    android:textSize="16sp"
                    />

                <RadioButton
                    android:id="@+id/diaryMyRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:button="@null"
                    android:checked="false"
                    android:fontFamily="@font/pretendard_regular"
                    android:paddingHorizontal="3dp"
                    android:text="나의 일기"
                    android:textAlignment="center"
                    android:background="@drawable/sel_main_underbar"
                    android:textSize="16sp" />

            </RadioGroup>
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/diaryBannerViewPager"
                android:layout_width="0dp"
                android:layout_height="130dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/diaryToolbar" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/diarySlicingLineView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/diaryTopPanel"
        android:layout_marginTop="20dp"
        android:background="@color/gray"/>
    <GridView
        android:id="@+id/DiaryGridView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:numColumns="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diarySlicingLineView"
        />
<!--    <com.google.android.material.floatingactionbutton.FloatingActionButton-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"/>-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/diaryEditFloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="41dp"
        app:elevation="0dp"
        app:backgroundTint="@color/yellow"
        app:shapeAppearance="@style/diaryActionButton"
        android:src="@drawable/ic_write"

        />



</androidx.constraintlayout.widget.ConstraintLayout>