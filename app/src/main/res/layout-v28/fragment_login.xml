<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".login.LoginFragment"
    android:background="#F5F5F5">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/circleImg"
                android:layout_width="689dp"
                android:layout_height="529dp"
                android:layout_marginStart="-150dp"
                android:layout_marginTop="-273dp"
                android:src="@drawable/sp_yellow_circle_login"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/firstText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="50dp"
                android:text="애기야에 오신걸"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:layout_constraintBottom_toTopOf="@id/firstText2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/firstText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="환영합니다"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:layout_constraintEnd_toEndOf="@id/firstText1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/firstText1"
                app:layout_constraintTop_toBottomOf="@id/firstText1" />


            <TextView
                android:id="@+id/firstText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="로그인 방식을 선택해 주세요."
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/firstText1"
                app:layout_constraintTop_toBottomOf="@id/firstText2" />


            <TextView
                android:id="@+id/infoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="43dp"
                android:text="당신의 정보를 입력해주세요."
                android:textColor="#989898"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/emailLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/circleImg" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="36dp"
                android:layout_marginStart="43dp"
                android:layout_marginEnd="43dp"
                android:labelFor="@id/test"
                android:outlineAmbientShadowColor="@color/yellow"
                android:textColorHint="#A0A0A0"
                app:boxBackgroundColor="#F5F5F5"
                app:boxBackgroundMode="filled"
                app:boxStrokeColor="@color/yellow"
                app:cursorColor="@color/yellow"
                app:errorEnabled="true"
                app:hintTextColor="@color/yellow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/infoText"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="이메일"
                    android:text="dongchan070316@gmail.com"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:labelFor="@id/test"
                android:textColorHint="#A0A0A0"
                app:boxBackgroundColor="#F5F5F5"
                app:boxBackgroundMode="filled"
                app:boxStrokeColor="@color/yellow"
                app:cursorColor="@color/yellow"
                app:endIconCheckable="true"
                app:endIconDrawable="@drawable/ic_visibility"
                app:endIconMode="custom"
                app:endIconTint="#A0A0A0"
                app:errorEnabled="true"
                app:hintTextColor="@color/yellow"
                app:layout_constraintEnd_toEndOf="@id/emailLayout"
                app:layout_constraintStart_toStartOf="@id/emailLayout"
                app:layout_constraintTop_toBottomOf="@id/emailLayout"


                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="비밀번호"
                    android:text="123456789"
                    android:inputType="textPassword" />
                <!-- text-->

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:contextClickable="false"
                android:id="@+id/loginButton"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="52dp"
                android:layout_marginEnd="36dp"
                android:background="@drawable/sp_rectangle_login"
                android:shadowRadius="0"
                android:stateListAnimator="@null"
                android:text="로그인"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/passwordLayout" />

            <TextView
                android:id="@+id/singeUpText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계정이 없으신가요? "
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/singeUpTextButton"
                app:layout_constraintEnd_toStartOf="@id/singeUpTextButton"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@id/loginButton"

                app:layout_constraintTop_toTopOf="@id/singeUpTextButton" />

            <TextView
                android:id="@+id/singeUpTextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:text="회원가입"
                android:textColor="#F6A723"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/loginButton"
                app:layout_constraintStart_toEndOf="@id/singeUpText"
                app:layout_constraintTop_toBottomOf="@id/loginButton" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/googleAuthButton"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginTop="60dp"

                app:layout_constraintEnd_toEndOf="@id/loginButton"
                app:layout_constraintStart_toStartOf="@id/loginButton"
                app:layout_constraintTop_toBottomOf="@id/singeUpTextButton">

                <ImageView
                    android:layout_width="336dp"
                    android:layout_height="52dp"
                    android:background="@drawable/sp_google_backgraound"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/googleImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/google_logo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/googleText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/googleText2"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/googleText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 계정으로 로그인하기"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/googleText1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/googleText1" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>









</androidx.constraintlayout.widget.ConstraintLayout>