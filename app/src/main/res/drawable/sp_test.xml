<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid
                android:color="@color/white"/>
            <size
                android:height="5dp"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid
                    android:color="@color/yellow"/>
                <size
                    android:height="5dp"/>
            </shape>
        </clip>
    </item>
</layer-list>
